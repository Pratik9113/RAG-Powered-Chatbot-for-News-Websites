# Server Configuration
PORT=5001
NODE_ENV=production

# Database
DB_PATH=rag.db

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Session Configuration
SESSION_TTL_SECONDS=86400
SESSION_HISTORY_MAX=200

# Cache Configuration
ANSWER_CACHE_TTL_SECONDS=600
QUERY_CACHE_TTL_SECONDS=300

# Optional SQL Transcript Persistence
PERSIST_TRANSCRIPTS=false

# API Keys (Required)
JINA_API_KEY=your_jina_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# RSS Feeds for Ingestion
RSS_FEEDS=https://feeds.reuters.com/reuters/topNews,https://feeds.bbci.co.uk/news/rss.xml,https://rss.cnn.com/rss/edition.rss

# Ingestion Configuration
INGEST_MAX_ITEMS=60
INGEST_BATCH_SIZE=8
